#!/bin/sh
# Pre-commit hook to run CI checks locally

echo "🔍 Running pre-commit checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed!"
  exit 1
fi

# Run linting
echo "🔧 Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed!"
  exit 1
fi

# Run format checking
echo "💄 Format checking..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Format checking failed! Run 'npm run format' to fix."
  exit 1
fi

# Run build test
echo "🔨 Build testing..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed!"
  exit 1
fi

echo "✅ All checks passed! Ready to commit."
