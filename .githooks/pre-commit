#!/bin/sh
# Pre-commit hook to run CI checks locally

echo "ğŸ” Running pre-commit checks..."

# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed!"
  exit 1
fi

# Run linting
echo "ğŸ”§ Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed!"
  exit 1
fi

# Run format checking
echo "ğŸ’„ Format checking..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Format checking failed! Run 'npm run format' to fix."
  exit 1
fi

# Run build test
echo "ğŸ”¨ Build testing..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed!"
  exit 1
fi

echo "âœ… All checks passed! Ready to commit."
