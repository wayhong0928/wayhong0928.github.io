---
import Card from '@/components/ui/Card.astro';

export interface PostItem {
  slug: string;
  data: {
    title: string;
    date: Date;
    summary?: string;
    tags: string[];
  };
}

interface Props {
  items: PostItem[];
  baseHref: string;
} // e.g. baseHref:'/zh/notes'
const { items, baseHref } = Astro.props;
---

<div class="grid gap-4 md:grid-cols-2">
  {
    items.map((p) => (
      <Card as="article">
        <a href={`${baseHref}/${p.slug}`} class="block hover:opacity-90">
          <h3 class="text-lg font-semibold mb-1">{p.data.title}</h3>
          <p class="text-xs opacity-60 mb-2">{p.data.date.toISOString().slice(0, 10)}</p>
          {p.data.summary && <p class="text-sm opacity-80">{p.data.summary}</p>}
          {p.data.tags.length > 0 && (
            <div class="mt-2 flex flex-wrap gap-2">
              {p.data.tags.map((t) => (
                <span class="text-xs px-2 py-1 rounded-xl bg-brand/10">{t}</span>
              ))}
            </div>
          )}
        </a>
      </Card>
    ))
  }
</div>
