---
import BaseLayout from '@/layouts/BaseLayout.astro';
import t, { getLocaleFromPath } from '@/lib/i18n';

const locale = getLocaleFromPath(Astro.url.pathname); // /en 路徑 → en
---

<BaseLayout title="WayHong — Home" description="Portfolio and Learning Notes">
  <!-- Hero Section -->
  <section class="py-12">
    <div class="max-w-3xl">
      <h1 class="text-3xl lg:text-5xl font-bold mb-6 leading-tight">
        Hello, I'm <span class="text-content font-bold">WayHong</span>
      </h1>
      <p class="text-lg lg:text-xl text-gray-600 mb-8 leading-relaxed">
        Welcome to my personal portfolio, projects, and learning notes. I focus on frontend development and love exploring new technologies and sharing experiences.
      </p>
      <div class="flex flex-col md:flex-row gap-4">
        <a href="/en/projects" class="btn text-center border border-gray-300 hover:border-gray-400 hover:shadow-sm transition-all duration-300">
          {t('nav.projects', locale)}
        </a>
        <a href="/en/notes" class="btn text-center border border-gray-300 hover:border-gray-400 hover:shadow-sm transition-all duration-300">
          {t('nav.notes', locale)}
        </a>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-8 border-t border-gray-200 mt-8">
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <div class="card text-center border border-gray-200 hover:shadow-sm transition-shadow duration-300">
        <div class="text-3xl mb-2">🚀</div>
        <h3 class="font-semibold mb-2">Frontend Development</h3>
        <p class="text-sm text-gray-600">Specialized in React, TypeScript, Astro and other modern frontend technologies</p>
      </div>
      <div class="card text-center border border-gray-200 hover:shadow-sm transition-shadow duration-300">
        <div class="text-3xl mb-2">📝</div>
        <h3 class="font-semibold mb-2">Technical Notes</h3>
        <p class="text-sm text-gray-600">Document learning processes and development insights, sharing practical tips</p>
      </div>
      <div class="card text-center border border-gray-200 hover:shadow-sm transition-shadow duration-300">
        <div class="text-3xl mb-2">💡</div>
        <h3 class="font-semibold mb-2">Continuous Learning</h3>
        <p class="text-sm text-gray-600">Explore new technologies, pursue code quality and user experience</p>
      </div>
    </div>
  </section>
</BaseLayout>