---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostList from '@/components/content/PostList.astro';
import { getCollection } from 'astro:content';

// 獲取中文文章，過濾草稿
const posts = await getCollection('posts', ({ id, data }) => {
  return id.startsWith('zh/') && !data.draft;
});

// 按日期排序 (新到舊)
const sortedPosts = posts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .map(post => ({
    ...post,
    slug: post.slug.replace('zh/', '') // 移除語言前綴
  }));
---

<BaseLayout title="學習筆記 — WayHong" description="我的學習筆記與技術文章">
  <section class="py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-4">學習筆記</h1>
      <p class="text-muted leading-relaxed">
        這裡記錄了我的學習過程、技術心得與實作經驗，希望能對您有所幫助。
      </p>
    </div>

    {sortedPosts.length > 0 ? (
      <PostList items={sortedPosts} baseHref="/zh/notes" />
    ) : (
      <div class="card text-center py-12">
        <div class="text-4xl mb-4">📝</div>
        <h3 class="text-lg font-semibold mb-2">筆記整理中</h3>
        <p class="text-muted">
          學習筆記正在整理中，敬請期待！
        </p>
      </div>
    )}

    <!-- 統計資訊 -->
    {sortedPosts.length > 0 && (
      <div class="mt-8 pt-6 border-t border-gray-200">
        <p class="text-sm text-muted text-center">
          目前共有 {sortedPosts.length} 篇筆記
        </p>
      </div>
    )}
  </section>
</BaseLayout>
